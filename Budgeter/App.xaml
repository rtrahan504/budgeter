<Application x:Class="Budgeter.App"
	   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	   xmlns:local="clr-namespace:Budgeter"
	   StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="Foreground" Color="{x:Static SystemColors.ControlTextColor}"/>
        <SolidColorBrush x:Key="Background" Color="{x:Static SystemColors.WindowColor}"/>
        <SolidColorBrush x:Key="CloseButtonBackgroundPressed" Color="{x:Static SystemColors.ActiveCaptionColor}"/>
    </Application.Resources>
</Application>
